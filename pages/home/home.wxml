<!-- 1.事件处理的回顾 -->
<button bindtap="handleBtnClick" size="mini">按钮</button>
<button bind:tap="handleBtnClick" size="mini">按钮</button>
<button catch:tap="handleBtnClick" size="mini">按钮</button>

<!-- 2.常见的一些时间 -->
<view class="box"
      bind:touchstart="handleTouchStart"
      bind:touchmove="handleTouchMove"
      bind:touchend="handleTouchEnd"
      bind:tap="handleTap"
      bind:longpress="handleLongpress">
</view>

<!-- 3.事件的传递参数 -->
<view class="container">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="item" bindtap="handleItemClick" data-index="{{index}}"
    data-item="{{item}}">{{item}}</view>
  </block>
</view>

<!-- 4.事件的捕获与冒泡 -->
<view class="view1" capture-catch:tap="handleCaptureView1" bindtap="handleView1">
  <view class="view2" capture-bind:tap="handleCaptureView2" bindtap="handleView2">
    <view class="view3" capture-bind:tap="handleCaptureView3" bindtap="handleView3"></view>
  </view>
</view>